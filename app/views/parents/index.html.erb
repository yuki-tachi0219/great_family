<p id="notice"><%= notice %></p>

<h2>親世代</h2>
<%= link_to '祖父世代へ', grand_parents_path %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>名</th>
      <th>姓</th>
      <th>性別</th>
      <th>親ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parents.each do |parent| %>
      <tr>
        <td><%= parent.id %></td>
        <td><%= parent.first_name %></td>
        <td><%= parent.last_name %></td>
        <td><%= Parent.human_attribute_name("gender.#{parent.gender}") %></td>
        <td><%= parent.grand_parent_id %></td>
        <td><%= link_to '詳細', parent %></td>
        <td><%= link_to '編集', edit_parent_path(parent) %></td>
        <td><%= link_to '削除', parent, method: :delete, data: { confirm: '削除していいですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
