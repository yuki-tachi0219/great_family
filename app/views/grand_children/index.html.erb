<h2>孫世代</h2>
<%= link_to '子世代へ', children_path %>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Gender</th>
      <th>Child</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grand_children.each do |grand_child| %>
      <tr>
        <td><%= grand_child.first_name %></td>
        <td><%= grand_child.last_name %></td>
        <td><%= grand_child.gender %></td>
        <td><%= grand_child.child_id %></td>
        <td><%= link_to 'Show', grand_child %></td>
        <td><%= link_to 'Edit', edit_grand_child_path(grand_child) %></td>
        <td><%= link_to 'Destroy', grand_child, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
